{
    "compilerOptions": {
        "target": "ES6",
        "resolveJsonModule": true,
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        },
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types", "src/@types"]
    },
    "include": ["./src"],
    "exclude": ["dist/**", "node_modules/**.*"]
}
